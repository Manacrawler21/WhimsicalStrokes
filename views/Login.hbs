    <style>
    .container{
	font-family: 'Open Sans', sans-serif;
	color: white;
	border-radius: 25%;
}
.centered{
	position: fixed;
	top: 25%;
	left: 35%;
}
.login{
	background-color: #362b3d;
	opacity: .85;
	height: 250px;
	width: 220px;
	position: fixed;
	color: white;
	top: 42.5%;
	left: 43%;
	border: 10px solid #362b3d;
	padding: 12px;
}

*{
	margin: 0;
	padding: 0;
	box-sizing: border-box;
	font-family: 'Open Sans', sans-serif;
}

.Navbar{
	display: flex;
	position: -webkit-sticky;
	align-items: center;
	padding: 25px;
	max-width: 2000px;
	flex-direction: row;
	flex-wrap: wrap;
	position: sticky;
	background-color: white;
	top: 0;
}

.logo{
	margin-right: 850px;
	margin-bottom: 10px;
}

nav{
	text-align: center;

}

nav  ul{
	display: inline-block;
	list-style-type: none;
}

nav  ul li{
	display: inline-block;
	margin-right: 20px;
}


a{
	text-decoration: none;
	color: #99738e;
}

.container{
	background:radial-gradient(#fff,#ffd6d6);
	border-radius: 0px;
}

.mainbody{
	margin: auto;
	max-width: 1300px;
	display: flex;
	flex-wrap: wrap;
	align-items: center;
	justify-content: space-around;
	border-radius: 0px;
}

.col2{
	flex-basis: 50%;
	min-width: 300px;
}

.col2 img{
	float: left;
	object-fit: fill;
	display: static;
}

.col2 h2{
	position: relative;
	left: 50px;
	top: 125px;

	color:#f75f80;
	font-size: 40px;
	text-shadow: 1px 1px #969696;
}

.col2 h1{
		padding-right:25px;
		padding-left: 25px;
		color: #4d4d4d;
		font-size: 50px;
		line-height: 60px;
		margin: 25px 0;
}

input{
	border-radius: 30px;
	margin-bottom: 20px;

}

.dropbtn {
  background-color: #fff;
  border: none;
  margin:auto;
}

.dropdown {
  position: relative;
  display: inline-block;
}

.dropdown-content {
  display: none;
  position: absolute;
  background-color: #f1f1f1;
  min-width: 160px;
  box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
  z-index: 1;
}

.dropdown-content a {
  color: black;
  padding: 12px 16px;
  text-decoration: none;
  display: block;
}

.dropdown-content a:hover {background-color: #ddd;}

.dropdown:hover .dropdown-content {display: block;}

.btn{
	display: inline-block;
	padding: 8px 30px;
	border-radius: 30px;
	margin: 20px 0;
	color: #fff;
	background-color: #553d67;
	border: 2px;
	border-color: #fff;
}

.products{
	margin: 70px 30px;

}

.row{
	display: flex;
	align-items: center;
	flex-wrap: wrap;
	justify-content: space-around;

}
.col4{
	padding: 0px;
	flex-basis: 21%;
	min-width: 100px;
	margin-bottom: 30px;
	background-color: #fff;
	border-radius: 5px;
	transition: 0.4s;
	transition-timing-function: ease;
	width: 1200px;
	margin-left: 100px;
}

.col4:hover{
	background-color: #d1d1d1;
}

.col4 img{
	width: 320px;
	height: 200px;
	object-fit: cover;
	border-radius: 5px;
}

.col4 hr{
	margin: 2px;
	height:4px;
	border-width:0;
	color:#4d4d4d;
	background-color:#4d4d4d;
	width: 100%;
	border-radius: 2px;
}

.col4 h5{
	margin-top: 5px;
	margin-left: -700px;
}

.row a{
	color: #4d4d4d;
}

hr{
	margin: 25px;
	height:2px;
	border-width:0;
	color:#4d4d4d;
	background-color:#4d4d4d;
	width: 60%;
}


.info{
	display: flex;
	flex-wrap: wrap;
	justify-content: space-between;
}

.info h5{
	margin-right: 5px;
}

.pfp{
	border-radius: 50%;
	height: 35px;
	width: 35px;
}

.col4 .pfp{
	margin-top: 3px;
	border-radius: 50%;
	height: 35px;
	width: 35px;
	border:2px solid #4d4d4d;
	display: fixed;

}


.ratings{
	color: #45995e;
	margin: 2px;
	margin-left: 2px;
}


.stars{
	color: #4d4d4d;
	display: inline-block;
	margin-left: 130px;
}

.stars .checked {
  color: orange;
}

.footer{
	padding: 12px;
}

.footer a{
	text-decoration: none;
	color: #99738e;
}

.footer a:hover{
	color: #f64c72;
}



* {box-sizing:border-box}

.orderBox{
	flex-basis: 50%;
	min-width: 300px;
	background-color: #F3F3F3;
	border-radius: 35px;
	width: 500px;
	height: 10px;
	margin: 40px;
}





.mainReviewBox{
	flex-direction: column;
	background-color: #F3F3F3;
	width: 50%;
	margin-top: auto;
	padding-top: 5px;
	padding-bottom: 5px;
}


.UserReviewbox{
	background-color: #FFFFFF;
	padding: 10px;
	margin-top: 20px;
	margin-left: 20px;
	margin-right: 20px;
	margin-bottom: 20px;
	border: 1px;
	min-height: 100px;
	width: auto;

}

/* slideshow */
.slideshow-container {
  width: 500px;
  position: initial;
  margin: auto;

}

.mySlides {
  display: none;
}

.prev, .next {
  cursor: pointer;
  position: absolute;

	top: 1350px;
  width: auto;
  margin-top: -22px;
  padding: 16px;
  color: black;
  font-weight: bold;
  font-size: 18px;
  transition: 0.6s ease;
  border-radius: 0 3px 3px 0;
  user-select: none;
}

.next {
  right: 510px;
  border-radius: 3px 0 0 3px;
}

.prev:hover, .next:hover {
  background-color: rgba(0,0,0,0.8);
}

.numbertext {
  color: #f2f2f2;
  font-size: 12px;
  padding: 8px 12px;
  position: absolute;
  top: 0;
}

.dot {
  cursor: pointer;
  height: 15px;
  width: 15px;
  margin: 0 2px;
  background-color: #bbb;
  border-radius: 50%;
  display: inline-block;
  transition: background-color 0.6s ease;
}

.active, .dot:hover {
  background-color: #717171;
}

/* Fading animation */
.fade {
  -webkit-animation-name: fade;
  -webkit-animation-duration: 1.5s;
  animation-name: fade;
  animation-duration: 1.5s;
}

@-webkit-keyframes fade {
  from {opacity: .4}
  to {opacity: 1}
}

@keyframes fade {
  from {opacity: .4}
  to {opacity: 1}
}
    </style>
</head>
